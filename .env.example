# .env.example

# --- General Configuration ---
LOG_LEVEL=INFO
DEBUG=false

# --- Service Ports (exposed on localhost) ---
GATEWAY_PORT=8080
HELLO_WORLD_PORT=8001
LATEX_SERVER_PORT=8002
FILE_SERVER_PORT=8003

# --- File Storage Configuration ---
# This path will be mounted as a shared volume for services
# that need to access files directly.
SHARED_FILES_PATH=./shared_files
